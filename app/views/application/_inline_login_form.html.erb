<div class="inline-login-form">
  <%= bootstrap_form_for(@new_user, as: :user, url: session_path(:user), html: {class: "form-inline"}) do |f| %>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="input-group col-lg-4">
        <span class="input-group-addon">@</span>
        <%= f.email_field :email, autofocus: true, placeholder: :email, label: {class: "sr-only"}, class: "input-sm" %>
      </div>
      <div class="input-group col-lg-4">
        <span class="input-group-addon"><span class="fa fa-key"></span></span>
        <%= f.password_field :password, autocomplete: "off", placeholder: :password, label: {class: "sr-only"}, class: "input-sm" %>
      </div>
      <div class="col-lg-5"></div>
      <div class="input-group col-lg-3">
        <%= f.submit "Log in", class: "btn btn-default btn-sm" %>
      </div>
      <div class="remember-me col-lg-4">
        <%= f.check_box :remember_me %>
      </div>
    </div>
  <% end %>
</div>
