<% if letters.any? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Recipient</th>
        <% if display_author %>
        <th>Author</th>
        <% end %>
        <% if editable %>
        <th>Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% letters.each do |letter| %>
        <tr>
          <td><%= link_to letter.title, letter %></td>
          <td><%= link_to letter.recipient.name, letter.recipient %></td>
          <% if display_author %>
          <td><%= link_to letter.author.identity, letter.author %></td>
          <% end %>
          <% if editable %>
          <td>
            <%= link_to edit_me_letter_path(letter), class: "btn btn-default" do %>
              Edit
            <% end %>
            <%= link_to me_letter_path(letter), class: "btn btn-default", method: :delete do %>
              Destroy
            <% end %>
            <%= link_to publish_me_letter_path(letter), class: "btn btn-default", method: :put do %>
              Publish
            <% end %>
          </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p><i>No letters yet.</i></p>
<% end %>
