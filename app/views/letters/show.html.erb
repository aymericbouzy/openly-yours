<h2>
  <%= @letter.title %>
  <span class="follow-switch">
    <% if !user_signed_in? || current_user != @letter.author %>
      <%= follow_switch(@letter) %>
    <% end %>
  </span>
  <small><%= link_to pluralize(@letter.followships.count, "follower"), followers_letter_path(@letter) %></small>
</h2>

<%= render 'author_aside', author: @letter.author %>

<%= sanitize @letter.text %>

<% if @letter.rough_draft %>
  <%= link_to "Rough drafts", rough_drafts_me_letters_path %>
<% end %>
